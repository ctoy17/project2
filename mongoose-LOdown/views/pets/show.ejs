<%- include('../partials/header') %>
<section id="show">
    <div class="card" style="width: 18rem;">

   
    <% if(pet.petName) {%>
       <div><img class="card-img-top img" src="data:image/<%= pet.petPhoto %>;base64,
        <%=pet.data.toString('base64')%>"> </div> 

    <div id="divshow"><%= pet.petName %>
    </div>
      <div id="divshow">Age: <%= pet.petAge %></div>
      <div id="divshow">Owner: <%= user.name %></div>
      <% } %>
      <br><br>
    </div>
</section>

<div class="col comments">
    <h3 class="headline">Events</h3>
    <% if (user) { %>
        <table>
            <tbody class=>
                <% pet.events.forEach(function(e) { %>
                    
                    <tr>
                        <td class="event-user"><img src="<%= e.userAvatar %>"><%= e.userName %></td>
                        <td>Event Type:</td>
                        <td> <%= e.entryEvent %></td>
                        <td> Time:</td>
                        <td> <%= e.entryTime %> </td>
                        <td> Duration:</td>
                        <td> <%= e.duration %> </td>
                        <td>Details:</td>
                        <td> <%= e.details %> </td>
                    </tr>
                    <% }); %>
                </tbody>
            </table>
        <% } else { %>
            <h5>No Entries Yet</h5>
    <% } %>

    <br>

    
<br><br>
<% if (user && user._id.equals(pet.user)) { %> 
    <form action="/pets/<%= pet._id %>?_method=DELETE" method="POST">
    <button type="submit" class="btn btn-danger">Remove pet from database</button>
    </form>

<% } %>
</div> 

    <button><a href="/">Home</a></button>
    <button><a href="/pets/new">Add Pet</a></button>
    <button><a href="/pets/<%= pet._id %>/events">Add Event</a></button>

<%- include('../partials/footer') %>


