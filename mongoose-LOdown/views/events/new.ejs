<%- include('../partials/header') %>

<div class="container" id="entry-div">
  <h1>Events</h1>
  <% if (user) { %>
    <form id="add-entry-form" method="POST" action="/pets/<%= petId %>/events">
      <div class="form-group">
        <label>Event Type:</label>
          <select name="entryEvent" class="form-control">
            <option selected>Choose...</option>
            <option value="Seizure">Seizure</option>
            <option value="Other">Other</option>
          </select>
      </div>
      <div class="form-group">
        <label>Date:</label>
        <input name="entryDate" type="datetime-local" class="form-control">
      <div class="form-group">
        <label>Event Duration:</label>
        <input type="text" name="duration" class="form-control">
      <div class="form-group">
        <label>Details:</label>
        <input type="text" class="form-control" name="details">
        <small id="detailInfo" class="form-text text-muted">Provide any details that may be helpful for the vet</small>
      </div>
        <input type="submit" value="Add Event">
      
    </form>
<% } %> 
</div>

